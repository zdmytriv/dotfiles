# less noisy when on start up
\set QUIET 1

# Visible NULLs
\pset null 'Â¤'

# Display db name in prompt
\set PROMPT1 '%[%033[1m%][%/] # '
-- SELECT * FROM<enter>. %R shows what type of input it expects.
\set PROMPT2 '... > '

# Time all the things
\timing

# Auto format long and short tables
\x auto

# All verbose
\set VERBOSITY verbose

# Log everything into file
\set HISTFILE ~/.psql_history- :DBNAME
\set HISTCONTROL ignoredups

# UPPERCASE keywords on TAB
\set COMP_KEYWORD_CASE upper

\unset QUIET
